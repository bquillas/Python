#TRABAJANDO CON TEXTO: SLICES (Rebanadas)

nombre = 'Francisco'

nombre[0]       # 'F' 
nombre[1]       # 'r' 
nombre[0:3]     # 'Fra' 
nombre[:3]      # 'Fra' 
nombre[3:]      # 'ncisco' 
nombre[1:7]     # 'rancis' 
nombre[1:7:2]   # 'rni' 
nombre[::]      # 'Francisco' 
nombre[1::3]    # 'rcc' 
nombre[::-1]    # 'ocsicnarF' 

